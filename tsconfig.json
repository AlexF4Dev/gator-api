{
  "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowJs": true,
    "paths": {
          "*": [
              "node_modules/*",
               "src/types/*"
          ],
          "selectors/*" : ["app/selectors/*"]
      }
  },
  "include": [
      "./**/*"
  ]

}
